<div class="row">
    <div class="col-xl-12 col-xxl-9 col-lg-9" style="max-width: 900px;">
        <div class="card w-100 shadow-xss rounded-xxl border-0 p-4 mb-3">
            <div class="card-body p-0 d-flex">
                <figure class="avatar me-3"><img src="<%= activity.avt %>" alt="image"
                        class="shadow-sm rounded-circle w45"></figure>
                <h4 class="fw-700 text-grey-900 font-xssss mt-1">
                    <%= activity.username %>
                        <span class="d-block font-xssss fw-500 mt-1 lh-3 text-grey-500">
                            3 giờ trước
                        </span>
                </h4>
            </div>
            <div class="card-body p-0 me-lg-5">
                <p class="fw-500 text-grey-500 lh-26 font-xs w-100">
                    <%= activity.name %>
                </p>
                <p class="fw-600 text-grey-500 lh-26 font-xsss w-100">
                    Thời gian diễn ra hoạt động: <%= activity.start_date.toLocaleDateString() %> - <%=
                            activity.end_date.toLocaleDateString() %>
                </p>
                <p class="fw-600 text-grey-500 lh-26 font-xsss w-100">
                    Thời gian cho phép đăng ký: <%= activity.registration_start_date.toLocaleDateString() %> -
                        <%= activity.registration_end_date.toLocaleDateString() %>
                </p>
                <p class="fw-600 text-grey-500 lh-26 font-xsss w-100">
                    Địa điểm: <%= activity.location %>
                </p>
                <p class="fw-600 text-grey-500 lh-26 font-xsss w-100">
                    Số lượng đăng ký tối đa: <%= activity.maxnumber %>
                </p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-8 col-sm-10">
                <div class="card w-100 shadow-xss rounded-xxl border-0 p-4 mb-3">
                    <form action="/activity/<%= activity.id %>/register" method="post">
                        <% if (!student.email || !student.phone) { %>
                            <div class="form-group mb-3">
                                <label for="email" class="font-xsss fw-60">Email</label>
                                <input type="text" id="email" name="email"
                                    class="form-control text-grey-900 font-xss ls-3"
                                    value="<%= student.email != null ? student.email : '' %>"
                                    placeholder="Hãy nhập email của bạn" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="phone_number" class="font-xsss fw-60">Số điện thoại</label>
                                <input type="text" id="phone_number" name="phone_number"
                                    class="form-control text-grey-900 font-xss ls-3"
                                    value="<%= student.phone != null ? student.phone : '' %>"
                                    placeholder="Hãy nhập số điện thoại của bạn" required>
                            </div>
                            <% } %>
                                <div class="form-group mb-3">
                                    <label for="wish" class="font-xsss fw-60">Mong muốn của bạn</label>
                                    <input type="text" id="wish" name="wish"
                                        class="form-control text-grey-900 font-xss ls-3"
                                        placeholder="Mong muốn của bạn">
                                </div>
                                <button type="submit" name="submit" class="btn btn-primary w-100">Đăng
                                    ký</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>