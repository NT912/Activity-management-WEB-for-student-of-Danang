<%- include('./components/header'); %>

<div class="row">
    <% if (activities.length == 0) { %>
        <h2>Hiện tại không có hoạt động nào đang diễn ra</h2>
    <% } else { %>
        <h2>Các hoạt động đang diễn ra</h2>
        <% activities.forEach(activity => { %>
            <div class="col-md-4 px-2 py-2">
                <div class="col-md-12 rounded border px-3 py-3">
                    <div class="col-md-12 justify-content-lg-center mb-3" style="height: 200px; overflow: hidden;">
                        <img src="/<%- pathUtils.processImagePath(activity.image) %>" class="img-fluid rounded">
                    </div>
                    <h5 class="card-title"><%- activity.name %></h5>
                    <p class="card-text"><%- activity.description %></p>
                    <a href="/activity/<%- activity.id %>/view" class="btn btn-primary">Chi tiết</a>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>
<%- include('./components/footer'); %>
