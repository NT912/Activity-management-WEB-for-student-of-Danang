<%- include('../components/header'); %>

<div class="row justify-content-lg-center">
    <div class="col-md-12 mb-3">
        <h2>Cập nhật hoạt động <strong><%- activity.name %></strong> | ID: #<%- activity.id %></h2>
    </div>
    <div class="col-md-6">
        <img src="/<%- pathUtils.processImagePath(activity.image) %>" class="img-fluid rounded img-thumbnail">
    </div>
    <div class="col-md-6">
        <div class="col-md-12 justify-content-lg-right">
            <% if (activity.admin_id) { %>
                <span class="badge bg-success">Đã duyệt</span>
            <% } else { %>
                <span class="badge bg-warning">Chưa duyệt</span>
            <% } %>
        </div>
        <form action="/activity/<%- activity.id %>/edit" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <% if (user.role == 'admin') { %>
                    <div class="row mb-3">
                        <div class="col-lg-12">
                            <label for="id_code">Đơn vị tổ chức</label>
                            <select class="form-select" name="organization_id">
                                <% organizations.forEach(organization => { %>
                                    <option value="<%- organization.id %>" <% if (activity.organization_id == organization.id) { %>selected<% } %>><%- organization.name %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                <% } else { %>
                    <input type="hidden" name="organization_id" value="<%- organization.id %>">
                <% } %>
                <div class="row mb-3">
                    <div class="col-lg-12">
                        <label for="id_name">Tên hoạt động</label>
                        <input type="text" name="name" id="id_name" class="form-control" value="<%- activity.name %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-lg-12">
                        <label for="id_description">Mô tả</label>
                        <textarea name="description" id="id_description" class="form-control" rows="3"><%- activity.description %></textarea>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-lg-6">
                        <label for="id_start_date">Ngày bắt đầu</label>
                        <input type="date" name="start_date" id="id_start_date" class="form-control" value="<%- datetimeUtils.formatDate(activity.start_date) %>">
                    </div>
                    <div class="col-lg-6">
                        <label for="id_end_date">Ngày kết thúc</label>
                        <input type="date" name="end_date" id="id_end_date" class="form-control" value="<%- datetimeUtils.formatDate(activity.end_date) %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-lg-6">
                        <label for="id_registration_start_date">Ngày mở đăng ký</label>
                        <input type="date" name="registration_start_date" id="id_registration_start_date" class="form-control" value="<%- datetimeUtils.formatDate(activity.registration_start_date) %>">
                    </div>
                    <div class="col-lg-6">
                        <label for="id_registration_end_date">Ngày kết thúc đăng ký</label>
                        <input type="date" name="registration_end_date" id="id_registration_end_date" class="form-control" value="<%- datetimeUtils.formatDate(activity.registration_end_date) %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-lg-12">
                        <label for="id_location">Địa điểm</label>
                        <input type="text" name="location" id="id_location" class="form-control" value="<%- activity.location %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-lg-12">
                        <label for="id_image">Hình ảnh</label>
                        <input class="form-control" type="file" id="id_image" name="image">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-lg-12">
                        <label for="id_comment">Phản hồi của quản trị viên</label>
                        <textarea name="comment" id="id_comment" class="form-control" rows="3" <% if (user.role != 'admin') { %> readonly <% } %>><%- activity.comment %></textarea>
                    </div>
                </div>
            </div>
            <div class="d-grid gap-2 col-12 mx-auto">
                <button type="submit" class="btn btn-primary">Cập nhật hoạt động</button>
            </div>
        </form>
    </div>
</div>
<% if (registrations.length > 0) { %>
    <hr>
    <div class="row justify-content-lg-center">
        <h3>Danh sách sinh viên đã đăng ký</h3>
        <table class="table table-striped mt-5 align-middle">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Họ và tên</th>
                    <th scope="col">Khoa</th>
                    <th scope="col">Lớp</th>
                </tr>
            </thead>
            <tbody>
                <% registrations.forEach(registration => { %>
                    <tr>
                        <th scope="row"><%- registration.id %></th>
                        <td><%- registration.fullname %></td>
                        <td><%- registration.faculty %></td>
                        <td><%- registration.class %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<% } %>


